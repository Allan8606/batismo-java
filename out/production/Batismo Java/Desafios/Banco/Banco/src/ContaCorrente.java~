

public class ContaCorrente extends ContaBancaria {



    @Override
    public void depositar(double valor) {
        if (valor <= 0){
            System.out.println("Valor inválido");
        }

        System.out.println("O valor depositado foi: R$" + valor);
        saldo += valor;
    }

    @Override
    public void consultarSaldo() {
        System.out.println("Seu saldo atual na conta corrente é: R$" + saldo);
    }

    @Override
    public void sacar(double valor) {
        if (saldo < 0){
            System.out.println("Atenção, seu saldo está negativo!");
        }
        if (saldo == 0) {
            System.out.println("Seu saldo está ZERADO!");
        }
        if(saldo > 0) {
            saldo -= valor;
        }
    }
}
